{
    "model": {
        "name": "XGBoost",
        "description": "XGBoost model for Titanic survival prediction",
        "version": "1.0.0",
        "params": {
            "n_estimators": 100,
            "learning_rate": 0.01,
            "max_depth": 4,
            "use_label_encoder": false,
            "eval_metric": "logloss",
            "random_state": 42
        }
    },
    "features": {
        "categorical": [
            "Pclass",
            "Sex",
            "Embarked"
        ],
        "numerical": [
            "Age",
            "Fare",
            "FamilySize"
        ]
    },
    "preprocessing": {
        "fillna": {
            "Age": "median",
            "Fare": "median",
            "Embarked": "mode"
        },
        "create_features": {
            "FamilySize": {
                "expression": "SibSp + Parch",
                "description": "Total family size including the passenger"
            }
        },
        "drop_features": [
            "SibSp",
            "Parch",
            "Name",
            "Ticket",
            "Cabin"
        ]
    },
    "feature_engineering": {
        "encodings": {
            "onehot": {
                "features": [
                    "Pclass",
                    "Sex",
                    "Embarked"
                ],
                "params": {
                    "drop": "first",
                    "sparse_output": false,
                    "handle_unknown": "ignore"
                }
            }
        },
        "scaling": {
            "features": [],
            "method": null
        }
    },
    "training": {
        "train_size": 0.8,
        "test_size": 0.2,
        "random_state": 42,
        "evaluation": {
            "metrics": [
                "accuracy"
            ],
            "threshold": 0.5
        },
        "cross_validation": null
    },
    "output": {
        "model_path": "models/v1/model_xgb.pkl",
        "submission_file": "data/submission/submission.csv"
    }
}